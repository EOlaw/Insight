<% layout('layouts/boilerplate') %>

<!-- Header Start -->
<div class="container-fluid bg-black py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Consultant Profile</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Consultant Profile</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->

<main id="main" class="container py-5">
    <div class="section-title">
        <h2>Consultant Profile</h2>
        <p>View and manage your profile information</p>
    </div>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="profile-image-container mb-4">
                        <% if (consultant.user.profile && consultant.user.profile.avatar && consultant.user.profile.avatar.data) { %>
                            <img src="data:<%= consultant.user.profile.avatar.contentType %>;base64,<%= consultant.user.profile.avatar.data %>"
                                 alt="Profile Picture" 
                                 class="profile-image">
                        <% } else { %>
                            <img src="/default-avatar.png" 
                                 alt="Default Profile Picture" 
                                 class="profile-image">
                        <% } %>
                    </div>
                    <h3 class="card-title mb-2"><%= consultant.user.firstName %> <%= consultant.user.lastName %></h3>
                    <p class="text-muted mb-3"><%= consultant.user.email %></p>
                    <% if (currentUser && currentUser._id.equals(consultant.user._id)) { %>
                        <a href="/consultant/edit" class="btn btn-primary btn-sm me-2">Edit Profile</a>
                        <form action="/consultant/<%= consultant._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete Account</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Consultant Details</h4>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Specializations</th>
                                <td><%= consultant.specializations.join(', ') %></td>
                            </tr>
                            <tr>
                                <th>Years of Experience</th>
                                <td><%= consultant.yearsOfExperience %></td>
                            </tr>
                            <tr>
                                <th>Certifications</th>
                                <td>
                                    <% consultant.certifications.forEach(function(cert) { %>
                                        <p><%= cert.name %> - <%= cert.issuer %></p>
                                    <% }); %>
                                </td>
                            </tr>
                            <tr>
                                <th>Department</th>
                                <td><%= consultant.department %></td>
                            </tr>
                            <tr>
                                <th>Position</th>
                                <td><%= consultant.position %></td>
                            </tr>
                            <tr>
                                <th>Employee ID</th>
                                <td><%= consultant.employeeId %></td>
                            </tr>
                            <tr>
                                <th>Consultant Since</th>
                                <td><%= consultant.consultantSince.toDateString() %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- New section for Consultations -->
        <div class="col-12 mt-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Your Consultations</h4>
                    <% if (consultant.consultationHistory && consultant.consultationHistory.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Client</th>
                                        <th>Date & Time</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% consultant.consultationHistory.forEach(function(consultation) { %>
                                        <tr>
                                            <td><%= consultation.client.firstName %> <%= consultation.client.lastName %></td>
                                            <td><%= new Date(consultation.dateTime).toLocaleString() %></td>
                                            <td><%= consultation.duration %> minutes</td>
                                            <td><%= consultation.status %></td>
                                            <td>
                                                <a href="/consultation/<%= consultation._id %>" class="btn btn-sm btn-info">View Details</a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <p>No consultations scheduled yet.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    .profile-image-container {
        width: 200px;
        height: 200px;
        margin: 0 auto;
        position: relative;
        overflow: hidden;
    }

    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>