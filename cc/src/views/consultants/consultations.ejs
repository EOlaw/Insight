<% layout('layouts/boilerplate') %>

<!-- Header Start -->
<div class="container-fluid bg-black py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Available Consultations</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white" href="/consultant/">Consultant Dashboard</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Available Consultations</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->

<!-- Available Consultations Section -->
<div class="container py-5">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="mb-4">Available Consultations</h2>
            <% if (consultations && consultations.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Client</th>
                                <th>Service</th>
                                <th>Date & Time</th>
                                <th>Duration</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% consultations.forEach(consultation => { %>
                                <tr>
                                    <td><%= consultation.client.username %></td>
                                    <td><%= consultation.service.name %></td>
                                    <td><%= new Date(consultation.dateTime).toLocaleString() %></td>
                                    <td><%= consultation.duration %> minutes</td>
                                    <td>
                                        <form action="/consultant/pick-consultation/<%= consultation._id %>?_method=PUT" method="POST">
                                            <button type="submit" class="btn btn-primary btn-sm">Pick Consultation</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="alert alert-info">No available consultations at the moment.</p>
            <% } %>
        </div>
    </div>
</div>
<!-- End Available Consultations Section -->

<!-- Picked Consultations Section -->
<div class="container py-5">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="mb-4">Your Picked Consultations</h2>
            <% if (pickedConsultations && pickedConsultations.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Client</th>
                                <th>Service</th>
                                <th>Date & Time</th>
                                <th>Duration</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pickedConsultations.forEach(consultation => { %>
                                <tr>
                                    <td><%= consultation.client.username %></td>
                                    <td><%= consultation.service.name %></td>
                                    <td><%= new Date(consultation.dateTime).toLocaleString() %></td>
                                    <td><%= consultation.duration %> minutes</td>
                                    <td><%= consultation.status %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="alert alert-info">You haven't picked any consultations yet.</p>
            <% } %>
        </div>
    </div>
</div>
<!-- End Picked Consultations Section -->

<script>
    // You can add JavaScript here for any dynamic functionality
    // For example, confirmation before picking a consultation
    document.addEventListener('submit', function(event) {
        if (!confirm('Are you sure you want to pick this consultation?')) {
            event.preventDefault();
        }
    });
</script>