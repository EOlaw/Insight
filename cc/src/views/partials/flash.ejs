<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <% if (success && success.length) { %>
        <div class="toast align-items-center text-bg-success border-0 mb-3" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <strong>Success!</strong> <%= success %>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
        <% } %>

        <% if (error && error.length) { %>
        <div class="toast align-items-center text-bg-danger border-0 mb-3" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <strong>Error!</strong> <%= error %>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
        <% } %>

        <% if (info && info.length) { %>
        <div class="toast align-items-center text-bg-info border-0 mb-3" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <strong>Info!</strong> <%= info %>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
        <% } %>

        <% if (warning && warning.length) { %>
        <div class="toast align-items-center text-bg-warning border-0 mb-3" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <strong>Warning!</strong> <%= warning %>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
        <% } %>
    </div>
</div>

<style>
    .toast-container {
    z-index: 1060; /* Ensure it is above other elements */
    }

    .toast {
        opacity: 0.95;
        border-radius: 10px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .toast .btn-close {
        opacity: 0.8;
    }

    .toast:hover {
        opacity: 1;
        box-shadow: 0px 6px 16px rgba(0, 0, 0, 0.15);
    }
</style>

<script>
    $(document).ready(function() {
        var toastList = [].slice.call(document.querySelectorAll('.toast'))
            .map(function (toastEl) {
                return new bootstrap.Toast(toastEl, { delay: 5000 });
            });
        toastList.forEach(toast => toast.show());
    });
</script>
