<% layout('layouts/boilerplate') %>

<style>
    .profile-image-container {
        width: 250px;  /* Increased from 200px */
        height: 250px; /* Increased from 200px */
        margin: 0 auto;
        position: relative;
        overflow: hidden;
    }

    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .profile-image-container:hover .profile-image {
        transform: scale(1.05);
    }

    .card {
        border: none;
        transition: box-shadow 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .btn-primary, .btn-danger {
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary:hover, .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>

<!-- Header Start -->
<div class="container-fluid bg-black py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Client Profile</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Client Profile</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->

<!-- Main Content Start -->
<div class="container py-5">
    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="profile-image-container mb-4">
                        <% if (user.user.profile && user.user.profile.avatar && user.user.profile.avatar.data) { %>
                            <img src="data:<%= user.user.profile.avatar.contentType %>;base64,<%= user.user.profile.avatar.data %>"
                                 alt="Profile Picture" 
                                 class="profile-image">
                        <% } else { %>
                            <img src="/default-avatar.png" 
                                 alt="Default Profile Picture" 
                                 class="profile-image">
                        <% } %>
                    </div>
                    <h3 class="card-title mb-2"><%= user.user.firstName %> <%= user.user.lastName %></h3>
                    <p class="text-muted mb-3"><%= user.user.email %></p>
                    <% if (currentUser && currentUser._id.equals(user.user._id)) { %>
                        <a href="/client/edit" class="btn btn-primary btn-sm me-2">Edit Profile</a>
                        <form action="/user/<%= currentUser._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete Account</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Profile Details -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Client Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <h6 class="mb-0">Company</h6>
                            <p class="text-muted"><%= user.company || 'Not specified' %></p>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <h6 class="mb-0">Industry</h6>
                            <p class="text-muted"><%= user.industry || 'Not specified' %></p>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <h6 class="mb-0">Billing Address</h6>
                            <p class="text-muted"><%= user.billingAddress || 'Not specified' %></p>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <h6 class="mb-0">Preferred Services</h6>
                            <p class="text-muted">
                                <% if (user.preferredServices && user.preferredServices.length > 0) { %>
                                    <%= user.preferredServices.join(', ') %>
                                <% } else { %>
                                    Not specified
                                <% } %>
                            </p>
                        </div>
                        <!-- New fields (to be added to the model) -->
                        <div class="col-sm-6 mb-3">
                            <h6 class="mb-0">Client Since</h6>
                            <p class="text-muted"><%= user.clientSince ? user.clientSince.toLocaleDateString() : 'Not specified' %></p>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <h6 class="mb-0">Primary Contact</h6>
                            <p class="text-muted"><%= user.primaryContact || 'Not specified' %></p>
                        </div>
                    </div>
                    <a href="/consultation/create" class="btn btn-primary mt-3">Book Consultation</a>
                </div>
            </div>

            <!-- Consultation History -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Consultation History</h5>
                </div>
                <div class="card-body">
                    <% if (user.consultationHistory && user.consultationHistory.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Service</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% user.consultationHistory.forEach(consultation => { %>
                                        <tr>
                                            <td><a href="/service/<%= consultation.service %>" class="text-primary"><%= consultation.serviceName %></a></td>
                                            <td><%= consultation.date.toLocaleDateString() %></td>
                                            <td><span class="badge bg-<%= consultation.status === 'Completed' ? 'success' : 'warning' %>"><%= consultation.status %></span></td>
                                            <td>
                                                <a href="/consultation/<%= consultation._id %>/edit" class="btn btn-warning btn-sm me-1">Edit</a>
                                                <form action="/consultation/<%= consultation._id %>?_method=DELETE" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <p class="text-muted mb-0">No consultations found.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main Content End -->