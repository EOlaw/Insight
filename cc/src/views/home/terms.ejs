<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Smooth scrolling and accordion opening for table of contents
        document.querySelectorAll('#toc a').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                // Smooth scroll to the target element
                targetElement.scrollIntoView({
                    behavior: 'smooth'
                });

                // Open the corresponding accordion item
                const collapseElement = bootstrap.Collapse.getInstance(document.querySelector(this.getAttribute('data-bs-target')));
                if (collapseElement) {
                    collapseElement.show();
                }
            });
        });

        // Highlight active section in table of contents
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                const id = entry.target.getAttribute('id');
                if (entry.intersectionRatio > 0) {
                    document.querySelector(`#toc a[href="#${id}"]`).classList.add('active');
                } else {
                    document.querySelector(`#toc a[href="#${id}"]`).classList.remove('active');
                }
            });
        }, { threshold: 0.5 });

        // Track all sections that have an `id` applied
        document.querySelectorAll('.accordion-item').forEach((section) => {
            observer.observe(section);
        });
    });
</script>